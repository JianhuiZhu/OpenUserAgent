<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/download_item_container"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/mdtp_light_gray"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="5dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
<ImageView
    android:tag="finished"
    android:layout_marginRight="5dp"
    android:src="@drawable/ic_finished"
    android:layout_centerVertical="true"
    android:id="@+id/download_status_action"
    android:layout_alignParentLeft="true"
    android:layout_width="24dp"
    android:layout_height="24dp" />
    <TextView
        android:id="@+id/download_title"
        android:text="babaab"
        android:textSize="12sp"
        android:layout_toRightOf="@id/download_status_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/download_status_action"
        android:layout_marginTop="5dp"
        android:id="@+id/download_url"
        android:textSize="10sp"
        android:layout_below="@+id/download_title"
        android:maxLines="1"
        android:text="babaa"
        android:maxLength="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/download_delete"
        android:src="@drawable/ic_garbage"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</RelativeLayout>
    </android.support.v7.widget.CardView>