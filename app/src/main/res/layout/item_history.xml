<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/item_history_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/material_top_bottom_margin"
    android:layout_marginBottom="@dimen/material_top_bottom_margin"
    android:layout_height="@dimen/material_height_double_line_list_item_dense">
    <ImageView
        android:id="@+id/history_avatar"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_history"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <TextView
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="8dp"
        android:text="To be filled"
        android:textColor="@color/mdtp_date_picker_text_normal"
        android:layout_toRightOf="@+id/history_avatar"
        android:id="@+id/history_title"
        android:textSize="@dimen/text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/history_url"
        android:text="url to be filled"
        android:layout_toRightOf="@+id/history_avatar"
        android:layout_below="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/history_item_checkbox"
        android:maxLength="20"
        android:maxLines="1"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/text_caption"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/mdtp_transparent_black"
        android:layout_height="wrap_content" />
    <CheckBox
        android:layout_marginTop="8dp"
        android:id="@+id/history_item_checkbox"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_toRightOf="@+id/history_avatar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>