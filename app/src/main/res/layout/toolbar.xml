<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <EditText
        android:id="@+id/home_url_bar"
        android:layout_gravity="center"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="100%"
        android:hint="Type url or keyword"
        android:background="@android:color/transparent"

        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/add_bookmark_icon"
        android:layout_toRightOf="@+id/home_url_bar"
        android:layout_gravity="center"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="100%"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/add_bookmark_icon" />

    <ImageView
        android:id="@+id/home_refresh_icon"
        android:layout_gravity="center"
        app:layout_widthPercent="10%"
        android:layout_toRightOf="@+id/add_bookmark_icon"
        app:layout_heightPercent="100%"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/refresh_icon" />

    <ImageView
        android:id="@+id/home_bookmark_icon"
        android:layout_gravity="center"
        app:layout_widthPercent="10%"
        android:layout_toRightOf="@+id/home_refresh_icon"
        app:layout_heightPercent="100%"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bookmark_icon" />

    <ImageView
        android:id="@+id/home_history_icon"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/home_bookmark_icon"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="100%"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/history_icon" />

    <ImageView
        android:id="@+id/home_menu_icon"
        android:layout_gravity="center"
        app:layout_widthPercent="10%"
        app:layout_heightPercent="100%"
        android:layout_toRightOf="@+id/home_history_icon"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/menu_icon" />
</android.support.percent.PercentRelativeLayout>