<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdtp_white"
    android:orientation="vertical"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/mdtp_accent_color"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/general_tool_bar_go_back"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="24dp"
            android:src="@drawable/ic_back"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/general_tool_bar_title"
            android:layout_toRightOf="@+id/general_tool_bar_go_back"
            android:text="Setting"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setting_avatar"
            android:layout_width="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_placeholder"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="Profile"
        android:textSize="16sp"
        android:textColor="@color/mdtp_accent_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:id="@+id/setting_profile_area"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_area"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_margin="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/username_area"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/username"
                android:layout_margin="5dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="none" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_area"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email"
                android:layout_margin="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_area"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:layout_margin="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="General"
        android:textSize="16sp"
        android:textColor="@color/mdtp_accent_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
<LinearLayout
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginLeft="16dp"
        android:text="Home Page"
        android:textStyle="bold"
        android:textColor="@color/mdtp_accent_color"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/setting_home_page"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Change Home page here"
                android:textColor="@color/mdtp_date_picker_text_normal"
                android:inputType="textUri" />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Current Search Engine"
            android:textColor="@color/mdtp_accent_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <Spinner
        android:layout_marginTop="8dp"
        style="@style/Widget.OpenUserAgent.HeaderBar.Spinner"
        android:id="@+id/search_engine_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:text="Use home page"
            android:textSize="16sp"
            android:textColor="@color/mdtp_accent_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:layout_alignParentRight="true"
            android:id="@+id/home_page_toggole"
            android:shadowColor="@color/mdtp_accent_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:text="Privacy"
        android:textSize="16sp"
        android:textColor="@color/mdtp_accent_color"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/mdtp_white"
            android:textColor="@color/mdtp_accent_color"
            android:text="Clear browsing data"
            android:textSize="14sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/mdtp_white"
            android:textColor="@color/mdtp_accent_color"
            android:text="Manage save password"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/mdtp_white"
            android:textColor="@color/mdtp_accent_color"
            android:text="Content setting"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:elevation="2dp"
            android:translationZ="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/mdtp_white"
            android:textColor="@color/mdtp_accent_color"
            android:text="Manage form"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
    </ScrollView>